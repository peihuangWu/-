page {
  background-color: #E0FFFF;
}

.view {
  width: 80%;
  min-height: 120rpx;
  margin-top: 40rpx;
  padding-bottom: 20rpx;
  border: #EAEAEA solid 2rpx;
  margin-left: 20rpx;
}

.view view {
  width: 100%;
  height: 40rpx;
  font-size: 40rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}

.view view image {
  width: 30rpx;
  height: 30rpx;
}

.view input, .view textarea {
  border: solid 1px #ccc;
  padding: 0 5px;
  background-color: #fff;
  border-radius: 4px;
  width: 80%;
  margin: 0 auto;
}



@import "../../common/lib/weui.wxss";
@import "../../assets/iconfont.wxss";

.detailView {
  min-height: 530rpx;
  position: relative;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 300rpx;
  font-size: 16px;
  line-height: 1.5;
  overflow: scroll;
  padding: 10px 10px 20px 10px;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: absolute;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.publish {
  margin-top: 100rpx;
  margin-bottom: 40rpx;
  width: 70rpx;
  height: 40rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  text-align: center;
  color: white;
  background-color: #8470FF;
}


