.main {
  width: 100%;
  height: 100%;
  padding: 0rpx;
  margin:0rpx;
}

.bg {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -100;
}

.view {
  width: 100%;
  height: 100rpx;
  display: flex;
  line-height: 100rpx;
  font-size: 40rpx;
  margin-left: 20rpx;
}

.view image {
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
}

.view text:first-of-type {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.view input {
  width: 400rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-top: 30rpx;
  padding-left: 5rpx;
  border: #A8A8A8 solid 1px;
}

.signature {
  display: flex;
  flex-direction: column;
  height: 400rpx;
}

.signature .signText {
  display: flex;
}

.signature textarea {
  min-height: 100rpx;
  padding-left: 5rpx;
  border: #A8A8A8 solid 1px;
  line-height: 40rpx;
  font-size: 30rpx;
}

button {
  background-color:#E9967A;
  position: absolute;
  bottom: 40rpx;
  left: 170rpx;
}